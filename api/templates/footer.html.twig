    <footer class="footer">
        <div class="{% if application is defined and application.defaultConfiguration.configuration.colorScheme is defined  %}{{ application.defaultConfiguration.configuration.colorScheme }}{% else %}background--donkerblauw{% endif %} " style="padding: 30px 0;padding: 3rem 0;">
            <div class="container">
                <div class="row">
                    {% if application is defined and application.defaultConfiguration.configuration is defined and application.defaultConfiguration.configuration.footer1 is defined and application.defaultConfiguration.configuration.footer1 is not empty  %}
                        {% set menu = commonground_resource(application.defaultConfiguration.configuration.footer1) %}
                    <div class="col-xs-4">
                        <span class="footer__header"  >{{ menu.name }}</span>

                        <ul class="list list--links footer__nav" >
                            {% for item in menu.menuItems %}
                            <li><a href="{{ item.href }}">{{ item.name }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endif %}

                    {% if application is defined and application.defaultConfiguration.configuration is defined and application.defaultConfiguration.configuration.footer2 is defined and application.defaultConfiguration.configuration.footer2 is not empty  %}
                    {% set footer2 = commonground_resource(application.defaultConfiguration.configuration.footer2) %}
                    <div class="col-xs-4">
                        <span class="footer__header"  > {{ menu.name }}</span>

                        <ul class="list list--links footer__nav" >
                            {% for item in menu.menuItems %}
                            <li><a href="{{ item.href }}">{{ item.name }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endif %}

                    {% if application is defined and application.defaultConfiguration.configuration is defined and application.defaultConfiguration.configuration.footer3 is defined and application.defaultConfiguration.configuration.footer3 is not empty  %}
                    {% set menu = commonground_resource(application.defaultConfiguration.configuration.footer3) %}
                    <div class="col-xs-4">
                        <span class="footer__header" >{{ menu.name }}</span>

                        <ul class="list list--links footer__nav" >
                            {% for item in menu.menuItems %}
                            <li><a href="{{ item.href }}">{{ item.name }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endif %}

                </div>
            </div>
        </div>
    </footer>
