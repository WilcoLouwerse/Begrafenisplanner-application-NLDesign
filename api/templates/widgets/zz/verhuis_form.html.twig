{#            <div id="addPersonsDiv"></div>#}

            <p>Nieuwe woongegevens</p>

            <div class="row">
                <div class="col-md-6">
                    <label class="input__label" for="newStreet">Straat</label>
                    <input class="input__control input__control--text" id="newStreet" type="text" name="newStreet" required>
                </div>
                <div class="col-md-3">
                    <label class="input__label" for="newHouseNumber">Huisnummer</label>
                    <input class="input__control input__control--text" id="newHouseNumber" type="text" name="newHouseNumber" required>
                </div>
                <div class="col-md-3">
                    <label class="input__label" for="newHouseNumberAffix">Toevoeging</label>
                    <input class="input__control input__control--text" id="newHouseNumberAffix" type="text" name="newHouseNumberAffix" required>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label class="input__label" for="newPostalCode">Postcode</label>
                    <input class="input__control input__control--text" id="newPostalCode" type="text" name="newPostalCode" required>
                </div>
                <div class="col-md-6">
                    <label class="input__label" for="newLocality">Plaats</label>
                    <input class="input__control input__control--text" id="newLocality" type="text" name="newLocality" required>
                </div>
            </div>


            <label for="owner">Eigenaar van de nieuwe woning?</label>
            <input id="owner" type="checkbox" name="owner" value="true">

            <label for="date">Datum verhuizing</label>
            <input class="input__control input__control--text" id="date" type="date" name="date">

            <input type="hidden" name="config" value="{{ configuration }}">

            <input type="hidden" name="type" value="{{ type }}">

            <button class="btn btn--primary" type="submit">Verstuur</button>
        </form>
    </div><!-- /.content -->
</div><!-- /.content-background -->

