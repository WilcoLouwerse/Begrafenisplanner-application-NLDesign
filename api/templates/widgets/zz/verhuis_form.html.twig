<div class="content-background {{ backgroundColor }}">

    <div class="content">
        <form method="post" action="{{ path('app_zz_index') }}">

            <p>Huidige woongegevens</p>

            <div class="row">
                <div class="col-md-6">
                    <label class="input__label" for="currentStreet">Straat</label>
                    <input class="input__control input__control--text" id="currentStreet" type="text" name="currentStreet" required>
                </div>
                <div class="col-md-3">
                    <label class="input__label" for="currentHouseNumber">Huisnummer</label>
                    <input class="input__control input__control--text" id="currentHouseNumber" type="text" name="currentHouseNumber" required>
                </div>
                <div class="col-md-3">
                    <label class="input__label" for="currentHouseNumberAffix">Toevoeging</label>
                    <input class="input__control input__control--text" id="currentHouseNumberAffix" type="text" name="currentHouseNumberAffix" required>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label class="input__label" for="currentPostalCode">Postcode</label>
                    <input class="input__control input__control--text" id="currentPostalCode" type="text" name="currentPostalCode" required>
                </div>
                <div class="col-md-6">
                    <label class="input__label" for="currentLocality">Plaats</label>
                    <input class="input__control input__control--text" id="currentLocality" type="text" name="currentLocality" required>
                </div>
            </div>

            <p>Persoonlijke gegevens</p>

            <div class="row">
                <div class="col-md-6">
                    <label class="input__label" for="givenName">Voornaam</label>
                    <input class="input__control input__control--text" id="givenName" type="text" name="givenName" required>
                </div>
                <div class="col-md-6">
                    <label class="input__label" for="familyName">Achternaam</label>
                    <input class="input__control input__control--text" id="familyName" type="text" name="familyName" required>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label class="input__label" for="email">E-mail</label>
                    <input class="input__control input__control--text" id="email" type="text" name="email" required>
                </div>
                <div class="col-md-6">
                    <label class="input__label" for="telephone">Telefoonnummer</label>
                    <input class="input__control input__control--text" id="telephone" type="tel" name="telephone">
                </div>
            </div>

